<div class="container" style="text-align: center";>
<h1>Eat-Da-Burger!</h1>
<img src="https://www.freepngimg.com/thumb/android/67382-food-big-hamburger-fast-burger-png-download-free-thumb.png" alt="Hamburger">
  <div class="row">
    <div class="col-xs-5 col-md-5 col-lg-5">
      <h4>Burgers, not yet devoured!</h4>
        <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
        </ul>
    </div>
    <div class="col-xs-2 col-md-2 col-lg-2">
      <h5>Add a Burger</h5>
        <form class="create-form">
          <div class="form-group">
            <label for="ba">Burger Name:</label>
            <input type="text" id="ba" name="name">
          </div>
          <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="0" > Want to try it!<br>
            <input type="radio" name="devoured" value="1" checked> It was delicious!
          </div>
          <button type="submit">Add Burger</button>
        </form>
    </div>
    <div class="col-xs-5 col-md-5 col-lg-5">
      <h4>Devoured Burgers!</h4>
      <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
</div>